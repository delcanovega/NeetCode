{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "NeetCode",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++23",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-g",
                "-O0",
                "-arch",
                "arm64",
                "-fsanitize=address",
                "-o",
                "program.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated build task for NeetCode puzzles"
        }
    ]
  }